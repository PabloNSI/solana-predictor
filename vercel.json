{
  "builds": [
    {
      "src": "api/predict.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/predict.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1",
      "continue": true
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task",
    "MODEL_PATH": "/var/task/models/rf_model.pkl",
    "SCALER_PATH": "/var/task/models/scaler.pkl"
  },
  "functions": {
    "api/predict.py": {
      "maxDuration": 10,
      "memory": 1024
    }
  }
}